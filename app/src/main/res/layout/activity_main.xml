<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rajat.com.mathgame.MainActivity">

    <Button
        android:text="Button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/Option1"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="227dp"
        android:background="@android:color/holo_blue_bright"
        android:onClick="b1" />


    <Button
        android:text="Button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/Option2"
        android:layout_alignTop="@+id/Option1"
        android:layout_toEndOf="@+id/Option1"
        android:layout_marginLeft="19dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="b2" />

    <Button
        android:text="Button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/Option3"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="@color/colorAccent"
        android:onClick="b3" />

    <Button
        android:text="Button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/Option4"
        android:layout_marginLeft="19dp"
        android:layout_alignTop="@+id/Option3"
        android:layout_alignEnd="@+id/Option2"
        android:background="?android:attr/colorActivatedHighlight"
        android:onClick="b4" />

    <TextView
        android:text="Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/question"
        android:textSize="20sp"/>

    <TextView
        android:text="Marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/Option2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/marks"
        android:textSize="20sp"/>

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/marks"
        android:layout_marginLeft="10dp"
        android:id="@+id/time"
        android:textSize="20sp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/spinner" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Option1"
        android:layout_centerHorizontal="true"
        android:id="@+id/start"
        android:onClick="startClicked" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/score"
        android:layout_marginTop="26dp"
        android:textSize="20sp"/>
    <Button
        android:text="Restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Option1"
        android:layout_centerHorizontal="true"
        android:id="@+id/restart"
        android:onClick="onRestart"
        />
</RelativeLayout>
